@model WebApplication3.Models.UsersListViewModel
@{
    ViewBag.Title = "Index";
}

<h2>Список пользователей</h2> 
@Html.ValidationSummary()
<table  border="1">
    
    <tr>
        <td>ID</td>
        <td>Login</td>
        <td>FirstName</td>
        <td>SecondName</td>
        <td>LastName</td>
        <td>Email</td>
    </tr>
    @foreach (var user in Model.User)
    {
        <tr>
            <td>@user.Id</td>
            <td>@user.UserName</td>  
            <td>@user.FirstName</td>
            <td>@user.SecondName</td>
            <td>@user.LastName</td>
            <td>@user.Email</td>
         <td>  @Html.ActionLink("Изменить", "Change", "User", new {id = user.Id}, null)</td>
        </tr>
      
    }
    
</table>

<div>
    @Html.ActionLink("Добавить пользователя", "CreateUser", "User")
</div>


